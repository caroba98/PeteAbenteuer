<div class="home mountain-seperator">
  <%= image_tag( 'cover2_pete.png', class: 'cover') %>

  <div class="home-content">
    <h1><br>Blog</h1>
  </div>
</div>

<section class="projects">

  <div class="container p-5">

    <div class="d-flex align-items-right justify-content-right">
      <%= link_to new_article_path, class: "link ms-auto" do %>
        <button class="start-button" role="button"><span class="text">Neuer Artikel</span></button>
      <% end %>
    </div>

    <div class="row">
      <% @articles.each do |article| %>
        <div class="col-4">
          <div class="card" style="width: 18rem;">
            <%= cl_image_tag article.photo.key, height: 300, width: 400, crop: :fill, class: "card-img-top" %>
            <div class="card-body">
              <h5 class="card-title"><%= article.title %></h5>
              <%= link_to "Show this article", article %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
